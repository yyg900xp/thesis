rng(123)
n=100; #number of the increments of the path of the brownian motion
dt=0.01; #define the increments (difference of time) to be 0.01
t = (dt:dt:n*dt)'; #time t
t = [0;t]; # add the starting time (t=0)
increments1 = normrnd(0,sqrt(dt),1,n); 
increments2 = normrnd(0,sqrt(dt),1,n);
increments3 = normrnd(0,sqrt(dt),1,n);
#sample the increments of the path of the brownian motion from the normal distribution with mean=0 and variance dt

path1 = [cumsum(increments1)]';
path1 = [0;path1];
path2 = [cumsum(increments2)]';
path2 = [0;path2];
path3 = [cumsum(increments3)]';
path3 = [0;path3];
#create the path

figure(1)
plot(t,path1,t,path2,t,path3)
xlabel('time (t)');
ylabel('B_t');
title('Some paths of one dimensional standard Brwonian motion with variance 0.01');
#obtain the figure
